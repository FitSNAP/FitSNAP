[PYACE]
elements = C O H
cutoff = 4.0
delta_spline_bins = 0.001

# Embeddings (uniform for all elements in this case)
embeddings = {"ALL": {"npot": "FinnisSinclairShiftedScaled", "fs_parameters": [1, 1, 1, 0.5], "ndensity": 2}}

# Bonds (uniform for all element pairs, includes core repulsion)
bonds = {"ALL": {"radbase": "ChebExpCos", "radparameters": [5.25], "rcut": 4.0, "dcut": 0.01, "NameOfCutoffFunction": "cos", "core-repulsion": [0.0, 5.0]}}

# Functions (applies to all body order combinations)
functions = {"ALL": {"nradmax_by_orders": [15, 3, 2, 2, 1], "lmax_by_orders": [0, 2, 2, 1, 1]}}

[CALCULATOR]
calculator = LAMMPSPYACE
energy = 1
force = 0
stress = 0

[ESHIFT]
C = 0.0
O = 0.0  
H = 0.0

[SOLVER]
solver = SLATE
compute_testerrs = 1
detailed_errors = 1

[SLATE]
alpha = 1e-6

[SCRAPER]
scraper = PACEMAKER

[PATH]
dataPath = .

[OUTFILE]
output_style = PACE
metrics = Ethanol_metrics.md
potential = Ethanol_pot

[REFERENCE]
units = metal
atom_style = atomic
pair_style = zero 6.0
pair_coeff = * *

[GROUPS]
# name size eweight fweight vweight
group_sections = name training_size testing_size eweight fweight vweight
group_types = str float float float float float
smartweights = 0
random_sampling = 0
# Single group for ethanol data
ethanol =  1.0    0.0    0.01    0.99    1.00E-08

[EXTRAS]
dump_descriptors = 1
dump_truth = 1
dump_weights = 1

[MEMORY]
override = 0

[FIT]
# Pacemaker-style fit settings (converted)
# loss: kappa=0.99 (force-dominated), L1_coeffs=0, L2_coeffs=0
# optimizer: BFGS
# maxiter: 2000
# fit_cycles: 2 (multiple fitting rounds)
# ladder_step: 15
# ladder_type: body_order
