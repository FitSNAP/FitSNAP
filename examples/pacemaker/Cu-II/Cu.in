[PYACE]
elements = Cu
cutoff = 7.5
delta_spline_bins = 0.001

# Embeddings (converted from pacemaker format)
embeddings = {"ALL": {"npot": "FinnisSinclairShiftedScaled", "fs_parameters": [1, 1, 1, 0.5], "ndensity": 2}}

# Bonds (converted from pacemaker format - note SBessel radial basis)  
bonds = {"ALL": {"radbase": "SBessel", "radparameters": [5.25], "rcut": 7.5, "dcut": 0.01, "NameOfCutoffFunction": "cos"}}

# Functions (higher complexity than Cu-I)
functions = {"UNARY": {"nradmax_by_orders": [15, 6, 4, 3, 2, 1], "lmax_by_orders": [0, 3, 3, 2, 2, 1]}}

[CALCULATOR]
calculator = PYACE
energy = 1
force = 1 
stress = 0

[ESHIFT]
Cu = 0.0

[SOLVER]
solver = SVD
compute_testerrs = 1
detailed_errors = 1

[SCRAPER]
scraper = PACEMAKER

[PATH]
dataPath = .

[OUTFILE]
output_style = PACE
metrics = Cu_metrics.md
potential = Cu_pot

[REFERENCE]
units = metal
atom_style = atomic
pair_style = zero 10.0
pair_coeff = * *

[GROUPS]
# name size eweight fweight vweight
group_sections = name training_size testing_size eweight fweight vweight
group_types = str float float float float float
smartweights = 0
random_sampling = 0
# 90% training, 10% testing as specified in pacemaker input
Cu_df2_1k =  0.9    0.1    1.0    1.0    1.00E-08

[EXTRAS]
dump_descriptors = 1
dump_truth = 1
dump_weights = 1

[MEMORY]
override = 0

[FIT]
# Pacemaker-style fit settings (converted)
# loss: kappa=auto, L1_coeffs=1e-8, L2_coeffs=1e-8
# optimizer: BFGS
# maxiter: 1000
# repulsion: auto (automatic inner cutoff)
# ladder_step: 200 
# ladder_type: power_order
